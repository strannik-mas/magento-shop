<?xml version="1.0"?>
<config>
	<tabs>
        <sns>
            <label>SNSTheme.Com</label>
            <sort_order>205</sort_order>
        </sns>
    </tabs>
	<sections>
        <sns_proaddto_cfg translate="label" module="proaddto">
    		<label>SNS Proaddto</label>
            <tab>sns</tab>
			<frontend_type>text</frontend_type>
            <sort_order>150</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<infomations translate="label">
            		<label>SNS Proaddto</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
            		<frontend_model>proaddto/adminhtml_system_config_form_fieldset_infomations</frontend_model>
	            </infomations>
	            <general translate="label">
            		<label>General Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
	                	<isenabled translate="label" module="core">
							<label>Enabled</label>
							<sort_order>10</sort_order>
							<frontend_type>select</frontend_type>
                        	<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</isenabled>
					</fields>
				</general>
				<confirmbox translate="label">
            		<label>Confirm box setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<width translate="label">
		            		<label>Width of product image</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>10</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Width of product image display in confirm box</comment>
						</width>
                    	<height translate="label">
		            		<label>Height of product image</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>20</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Width of product image display in confirm box</comment>
						</height>
						<autoclose translate="label">
		            		<label>Auto close</label>
		            		<sort_order>30</sort_order>
		            		<frontend_type>select</frontend_type>
                        	<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Auto close confirm box</comment>
						</autoclose>
						<timer translate="label">
		            		<label>Timer for close</label>
		            		<frontend_type>text</frontend_type>
		            		<sort_order>40</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><autoclose>1</autoclose></depends>
							<comment>Timer for auto close confirm box</comment>
						</timer>
                    </fields>
                </confirmbox>
            </groups>
    	</sns_proaddto_cfg>
    </sections>
</config>