<?xml version="1.0"?>
<config>
    <tabs>
        <sns>
            <label>SNSTheme.com</label>
            <sort_order>205</sort_order>
        </sns>
    </tabs>
    <sections>
    	<sns_slideshow_cfg translate="label" module="slideshow">
    		<label>SNS Slideshow</label>
            <tab>sns</tab>
			<frontend_type>text</frontend_type>
            <sort_order>150</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<infomations translate="label">
            		<label>SNS Slideshow</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
            		<frontend_model>slideshow/adminhtml_system_config_form_fieldset_infomations</frontend_model>
	            </infomations>
            	<general translate="label">
            		<label>Default Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
	                	<title translate="label">
	                		<label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</title>
						
						<slideoptions translate="label">
							<label>Slideshow Configuration</label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slideoptions>
	                	<slide_width translate="label">
	                		<label>Slide Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</slide_width>
	                	<slide_height translate="label">
	                		<label>Slide Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</slide_height>
	                	<autoplay translate="label">
	                		<label>Auto Play</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</autoplay>
						<pauseonhover translate="label">
                            <label>Pause On Hover</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>140</sort_order>
                            <comment></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pauseonhover>
	                	<slide_transitions translate="label">
		            		<label>Slide Transitions</label>
		            		<frontend_type>multiselect</frontend_type>
		            		<source_model>slideshow/system_config_source_transitions</source_model>
		            		<sort_order>150</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
	                	</slide_transitions>
						<rand_transition translate="label">
                            <label>Random Transition</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>160</sort_order>
                            <comment></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rand_transition>
						<slidessource translate="label">
							<label></label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>1000</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slidessource>
                        <slides_html translate="label">
                            <label>List slides html</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>It's Identifier of Static Blocks(ex: slide_html1, slide_html2, slide_html3)</comment>
                        </slides_html>
                    </fields>
	            </general>
            </groups>
    	</sns_slideshow_cfg>
    </sections>
</config>