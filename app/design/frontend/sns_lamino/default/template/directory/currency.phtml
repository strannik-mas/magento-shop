/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>	
<div class="currency">

	<div class="tongle">
			<?php $symbol1 = Mage::app()->getLocale()->currency($this->getCurrentCurrencyCode())->getSymbol(); ?>	
			<?php echo $symbol1; ?>
			<span> - <?php echo $this->getCurrentCurrencyCode();?></span>
			<i class="fa fa-angle-down"></i>
			
	</div>
	<div class="content">
	    <ul id="select-currency">	   
	    	<?php foreach ($this->getCurrencies() as $_code => $_name): ?>	
			<?php $symbol = Mage::app()->getLocale()->currency($_code)->getSymbol(); ?>
	    	<li>
			<?php if($_code != $this->getCurrentCurrencyCode()) : ?>
	    		<a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"<?php if($_code==$this->getCurrentCurrencyCode()): ?> class="selected"<?php endif; ?>><span> <?php echo $symbol; ?> - <?php echo $_code ?></span></a>
	    	<?php else : ?>
	    		<span><?php echo $symbol; ?> - <?php echo $_code; ?></span>
			<?php endif; ?>
			</li>
	    <?php endforeach; ?>
	    </ul>
	</div>
</div>
<?php endif; ?>
















